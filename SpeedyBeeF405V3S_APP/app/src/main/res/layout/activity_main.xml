                <Button
                    android:id="@+id/button_Read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="읽어오기" />

                <Button
                    android:id="@+id/button_Write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="적용하기" />

                <Button
                    android:id="@+id/button_Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="저장" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>